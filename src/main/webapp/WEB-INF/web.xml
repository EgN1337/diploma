<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>JavaWebApp</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>ru.rsreu.CHHENEV0813.FrontController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>Encoding</filter-name>
        <filter-class>ru.rsreu.CHHENEV0813.filters.EncodingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>Encoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>BlockedRedirect</filter-name>
        <filter-class>ru.rsreu.CHHENEV0813.filters.IsBlockedFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>BlockedRedirect</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>Redirect</filter-name>
        <filter-class>ru.rsreu.CHHENEV0813.filters.RoleFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>Redirect</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LifeTime</filter-name>
        <filter-class>ru.rsreu.CHHENEV0813.filters.SessionLifeTimeFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LifeTime</filter-name>
        <url-pattern>/controller</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>ru.rsreu.CHHENEV0813.SessionListener</listener-class>
    </listener>

    <error-page>
        <location>/controller?command=login</location>
    </error-page>

</web-app>